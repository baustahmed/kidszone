<!DOCTYPE html>
<html lang="en">
<!-- Head -->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Inlcude Tailwind CSS -->
    <link rel="stylesheet" href="../../dist/output.css">
    <!-- Include JQuery -->
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <!-- Include local Javascript file -->
    <script src="home.js"></script>
    <!-- Title icon -->
    <link rel="icon" type="image/x-icon" href="../img/favicon.png">
    <!-- END -->
    <title>About</title>
</head>
<!-- Body -->

<body class="bg-gray-300">
    <button onclick="collaspe()">
        <h1 class="text-5xl">Minimize</h1>
    </button>
    <div id="main" class="bg-white m-5 p-5 grid grid-cols-5">
        <!-- A -->
        <button onclick="A()">
            <div class="bg-green-600 m-5 p-5">
                <p class="text-5xl font-bold">A</p>
                <audio id="a_audio">
                    <source src="audio/a.mp3" type="audio/mp3">
                </audio>
            </div>
        </button>
        <div id="A" class="saad hidden bg-gray-300 m-5 p-5">
            <p class="text-5xl font-bold m-5 p-5">Apple</p>
            <img class="" src="img/apple.png" alt="apple">
        </div>
        <!-- B -->
        <button onclick="B()">
            <div class="bg-green-600 m-5 p-5">
                <p class="text-5xl font-bold">B</p>
                <audio id="b_audio">
                    <source src="audio/b.mp3" type="audio/mp3">
                </audio>
            </div>
        </button>
        <div id="B" class="saad hidden bg-gray-300 m-5 p-5">
            <p class="text-5xl font-bold m-5 p-5">Ball</p>
            <img class="" src="img/ball.png" alt="ball">
        </div>
        <!-- C -->
        <button onclick="C()">
            <div class="bg-green-600 m-5 p-5">
                <p class="text-5xl font-bold">C</p>
                <audio id="c_audio">
                    <source src="audio/c.mp3" type="audio/mp3">
                </audio>
            </div>
        </button>
        <div id="C" class="saad hidden bg-gray-300 m-5 p-5">
            <p class="text-5xl font-bold m-5 p-5">Cat</p>
            <img class="" src="img/cat.png" alt="cat">
        </div>
        <!-- D -->
        <button onclick="D()">
            <div class="bg-green-600 m-5 p-5">
                <p class="text-5xl font-bold">D</p>
                <audio id="d_audio">
                    <source src="audio/d.mp3" type="audio/mp3">
                </audio>
            </div>
        </button>
        <div id="D" class="saad hidden bg-gray-300 m-5 p-5">
            <p class="text-5xl font-bold m-5 p-5">Dog</p>
            <img class="" src="img/dog.png" alt="dog">
        </div>
    </div>
    <script>
        var m = document.getElementById("main");
        var all = document.getElementsByClassName("saad");
        var len = all.length;
        console.log(len);
        function collaspe() {
            for (let i = 0; i < len; i++) {
                all[i].classList.add("hidden");
            }
        }
        function A() {
            var audio = document.getElementById("a_audio");
            audio.play();
            collaspe();
            var x = document.getElementById("A");
            inner(x);
        }
        function B() {
            var audio = document.getElementById("b_audio");
            audio.play();
            collaspe();
            var x = document.getElementById("B");
            inner(x);
        }
        function C() {
            var audio = document.getElementById("c_audio");
            audio.play();
            collaspe();
            var x = document.getElementById("C");
            inner(x);
        }
        function D() {
            var audio = document.getElementById("d_audio");
            audio.play();
            collaspe();
            var x = document.getElementById("D");
            inner(x);
        }
        function inner(x) {
            x.classList.remove('hidden');
        }
    </script>
</body>

</html>